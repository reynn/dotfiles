#!/usr/bin/env zsh

# -----------------------------------------------------------------------------
# Global Aliases --------------------------------------------------------------

alias -g BIN_DOWNLOADS='yq r $DFP/ansible/vars/0-primary-vars.yaml "bin_downloads[*].repository" | tr "\- " "\0" | sort'
alias -g C='| wc -l'
alias -g G='| grep'
alias -g H='| head'
alias -g L='| less'
alias -g LL='2>&1 | less'
alias -g NE='2 > /dev/null'
alias -g NUL='> /dev/null 2>&1'
alias -g S='| sort'
alias -g bins='cd $DIR_BINS'
#alias -g grep='rg -i'
alias -g izf='import_zsh_files $IMPORT_DIRECTORIES'
alias -g reynn='cd $REYNN'

# -----------------------------------------------------------------------------
# General aliases -------------------------------------------------------------

alias fpaths='echo -e "${fpath//\ /\\n}"'
alias kill_ssh_agents='ps aux | grep ssh-agent | awk "{print \$2}" | xargs kill -9'
alias paths='echo -e ${PATH//:/\\n}'
alias please='sudo'

# -----------------------------------------------------------------------------
## Movement aliases -----------------------------------------------------------

alias ols='ls -la'
alias l='exa -lah --git-ignore --group-directories-first --time-style long-iso --color-scale'
alias ll='l --tree'
alias cl='clear;l'
alias cls='clear;ls'

# -----------------------------------------------------------------------------
## Directory aliases ----------------------------------------------------------

alias chall='chownall; chmodall;'
alias chmodall='sudo chmod -R u=rwx,g=rw,o=rw ./*'
alias chownall='sudo chown -R "$(id -u):$(id -g)" ./*'
alias cp='cp -i'
alias download_remote_directory='wget -c -r -np -l1 -e robots=off -R "fileicon.png*" -R "index.html*" -nd'
alias mkdir='mkdir -p'
alias mv='mv -i'
alias rm='rm -i'

# -----------------------------------------------------------------------------
## Readability aliases --------------------------------------------------------

alias df='df -h'
alias du='du -h -d 2'

# -----------------------------------------------------------------------------
## Networking aliases ---------------------------------------------------------

alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias localip='ipconfig getifaddr en0'

# -----------------------------------------------------------------------------
# SCM aliases -----------------------------------------------------------------

alias gitclean='git reset --hard && git clean -fx'
